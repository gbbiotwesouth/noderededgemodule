FROM arm32v7/node:10-alpine

WORKDIR /App

RUN npm install -g --unsafe-perm node-red

WORKDIR /usr/local/lib/node_modules/node-red/node_modules/node-red-contrib-azure-iot

COPY azureiotedge.js ./
COPY azureiotedge.html ./
COPY ./icons/azureiotedge.png ./icons/
COPY ./examples/* ./examples/
COPY package*.json ./

RUN npm install --production

EXPOSE 1880/tcp

USER node

CMD ["node-red", "--userDir", "/data/noderededgemodule", "--flowFile", "flows_noderededgemodule.json"]